.page { min-height:100vh; background:#1f1147; }
.container { padding:40rpx; text-align:center; color:#e9d5ff }
.avatar { width:160rpx; height:160rpx; border-radius:50%; margin:30rpx auto }
.name { display:block; font-size:32rpx; margin-bottom:20rpx }
.btn { width:60%; background:#8b5cf6; color:#fff; margin: 20rpx auto }
.stats { margin-top:40rpx; display:flex; justify-content:center; gap:40rpx }
.stat { background: rgba(255,255,255,0.08); border-radius:16rpx; padding:20rpx 30rpx }
.stat .n { display:block; font-size:36rpx; color:#fff; margin-top:8rpx }