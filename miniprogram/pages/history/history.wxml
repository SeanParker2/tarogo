<view class="page">
  <view class="container">
    <block wx:for="{{records}}" wx:key="id">
      <view class="item" bindtap="open" data-id="{{item.id}}">
        <view class="dot"></view>
        <view class="content">
          <text class="date">{{item.createdAt}}</text>
          <text class="question">{{item.question}}</text>
          <text class="type">{{item.type}}</text>
        </view>
      </view>
    </block>
    <view class="empty" wx:if="{{!records.length}}">暂无历史记录</view>
  </view>
</view>